# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                             controllers.Application.index 

# Map selection
GET    /selectAreas                  controllers.setup.Map.selectAreas
POST   /finalAreas                   controllers.setup.Map.finalSubmission

# General setup 
GET    /viewParams                   controllers.setup.General.viewParams
GET    /resetParams                  controllers.setup.General.resetParams 

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                 controllers.Assets.at(path="/public", file)

# Keywords selection
GET    /enterKeywords                controllers.setup.Keywords.form
POST   /finalKeywords                controllers.setup.Keywords.finalSubmission
POST   /initialKeywords              controllers.setup.Keywords.initialSubmission

# Gathering
POST    /gatheringStart               controllers.RESTfulGathering.GETstart
POST   /gathering                    controllers.RESTfulGathering.start
GET    /gathering/:id/display        controllers.RESTfulGathering.display(id: Long, fLong1: Double ?= -180.0, fLat1: Double ?= 90.0, fLong2: Double ?= 180.0, fLat2: Double ?= -90.0, viewLong: Double ?= 6.6, viewLat: Double ?= 46.5, zoomCenter: Double ?= 5.0)
PUT    /gathering/:id/pause          controllers.RESTfulGathering.pause(id: Long)
PUT    /gathering/:id/resume         controllers.RESTfulGathering.resume(id: Long)


GET    /setup                        controllers.setup.Map.setupAll
